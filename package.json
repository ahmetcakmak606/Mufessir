{
  "name": "Mufessir",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:up": "docker compose up -d",
    "db:migrate": "npx prisma migrate deploy --schema packages/database/prisma/schema.prisma",
    "db:seed": "npm --workspace apps/backend run seed",
    "setup:dev": "npm run db:up && npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
