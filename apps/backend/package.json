{
  "name": "@mufessir/backend",
  "private": true,
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "postinstall": "prisma generate --schema ../../packages/database/prisma/schema.prisma",
    "test": "vitest run",
    "test:watch": "vitest",
